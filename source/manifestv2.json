{
	"name": "Awesome Extension",
	"version": "0.0.0",
	"description": "TwitterInFB",
	
	"manifest_version": 2,
	
	"icons": {
		"128": "icon.jpg"
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://web.facebook.com/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://web.facebook.com/","https://web.facebook.com/home.php" ],
			"js": [ "content.ts" ],
			"css": [ "content.css" ],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"browser_style": true,
		"page": "options.html"
	},
	"background": {
		"scripts": ["background.ts"]
		
	}
}

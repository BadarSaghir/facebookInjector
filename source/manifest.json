{
	"name": "Twitter In FB",
	"version": "0.0.0",
	"description": "TwitterInFB",
	"manifest_version": 2,
	"icons": {
		"128": "icon.jpg",
		"48": "icon.jpg",
		"96": "icon.jpg"
	},
	"permissions": [
		"storage",
		"<all_urls>",
		"webRequest"
	],
	"content_scripts": [
		{
			"matches": [
				"https://web.facebook.com/",
				"https://web.facebook.com/home.php",
				"https://www.facebook.com/"
			],
			"js": [
				"content.ts"
			],
			"css": [
				"content.css"
			],
			"run_at": "document_end"
		}
	],
	"page_action": {
		"browser_style": true,
		"default_icon": {
			"19": "icon.jpg",
			"38": "icon.jpg"
		},
		"default_title": "TwitterInFb"
	},
	"content_security_policy": "script-src 'self'; object-src 'self'; img-src 'self'",

	"options_ui": {
		"browser_style": true,
		"page": "options.html"
	},
	"background": {
		"scripts": [
			"background.ts"
		]
	}
}
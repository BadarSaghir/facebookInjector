{
	"name": "Awesome Extension",
	"version": "0.0.0",
	"description": "An awesome new browser extension",
	"homepage_url": "https://github.com/SardarBadar/facebookinjector",
	"manifest_version": 3,
	"minimum_chrome_version": "100",

	"icons": {
		"128": "icon.jpg"
	},
	"permissions": [
		"storage",
		
		"webRequest"

	],
	"action": {
		"browser_style": true,
		"default_icon": {
			"19": "icon.jpg",
			"38": "icon.jpg"
		},
		"default_title": "TwitterInFb"
	},
	
	"host_permissions": [
		"*://*/*",
		"https://web.facebook.com/*",
		"https://tweet-recent.herokuapp.com/api/tweet/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://web.facebook.com/","https://web.facebook.com/home.php","https://www.facebook.com/"],
			"js": [ "content.ts" ],
			"css": [ "content.css" ],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"browser_style": true,
		"page": "options.html"
	},
	"background": {
		"service_worker": "background.ts",
		"type": "module"
	}
}
